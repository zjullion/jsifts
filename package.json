{
  "name": "jsifts",
  "version": "0.1.0",
  "description": "JavaScript Indexed Fuzzy Text Search",
  "main": "src/index.js",
  "author": "zjullion",
  "license": "MIT",
  "private": false,
  "keywords": [
    "search",
    "fuzzy",
    "text",
    "indexed"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zjullion/jsifts.git"
  },
  "homepage": "https://github.com/zjullion/jsifts",
  "engines": {
    "node": "16.13.2",
    "npm": ">7"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "build": "npx tsc",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint src",
    "test": "jest --coverage"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testMatch": [
      "**/*.test.js"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
